{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "lib": ["dom", "es2015", "es2015.promise"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src/**/*.spec.ts", "lib/**/*.ts"]
}
