{
  "name": "@walts81/firebase-helpers",
  "version": "1.0.17",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean:build && tsc",
    "test": "TS_NODE_FILES=true mocha",
    "test:cov": "npm run clean:coverage && TS_NODE_FILES=true nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean": "npm run clean:build && npm run clean:coverage",
    "clean:build": "rm -rf lib",
    "clean:coverage": "rm -rf coverage",
    "lint": "eslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "version-patch": "npm version patch -m \"updated version to %s\"",
    "version-minor": "npm version minor -m \"updated version to %s\"",
    "version-major": "npm version major -m \"updated version to %s\""
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "Typescript",
    "Firebase",
    "Helpers"
  ],
  "author": "Josh Walters",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walts81/firebase-helpers.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "firebase": "11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@types/chai": "5.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.10.2",
    "@types/sinon": "17.0.3",
    "@typescript-eslint/eslint-plugin": "8.19.0",
    "@typescript-eslint/parser": "8.19.0",
    "chai": "5.1.2",
    "coveralls": "3.1.1",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "mocha": "11.0.1",
    "nyc": "17.1.0",
    "sinon": "19.0.2",
    "source-map-support": "0.5.21",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "overrides": {
    "source-map-support": {
      "source-map": "0.7.4"
    }
  },
  "nyc": {
    "exclude": "**/*.spec.ts"
  }
}
